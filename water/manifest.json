{
    "manifest_version": 2,
  
    "name": "Water Reminder",
    "description": "This app reminds you to drink water",
    "version": "1.0",

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
  
    "browser_action": {
     "default_icon": "icon.png",
     "default_popup": "popup.html"
    },
    "permissions": [
     "activeTab",
     "alarms"
     ]
  }